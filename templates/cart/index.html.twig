{% extends 'base.html.twig' %}

{% block title %}Hello CartController!{% endblock %}

{% block body %}
    <h1>Mon panier</h1>
    <table>
        <thead>
            <tr>
                <td>Films</td>
                <td>Prix</td>
                <td>Quantite</td>
                <td>Total</td>
                <td>Actions</td>
            </tr>
        </thead>
        <tbody>
            {% for element in dataPanier %}
                <tr>
                    <td>{{element.film.title}}</td>
                    <td>{{element.film.price}}</td>
                    <td>{{element.quantite}}</td>
                    <td>{{element.quantite * element.film.price}} â‚¬</td>
                    <td><a href="{{path('cart_add_film', {id: element.film.id})}}">plus</a></td>
                </tr>
            {% else %}
                <tr>
                    <td>Votre panier est vide.</td>
                </tr>
            {% endfor %}
        </tbody>
        <tfoot>
            <tr>
                <td>Total</td>
            </td>
            <td>
                {{total}}
            </td>
        </tfoot>

    </table>
    
{% endblock %}
